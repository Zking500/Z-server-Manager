<Window x:Class="Z_Server_Manager.ServidorControler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Servidor Controlador" Height="300" Width="600">
    <Grid>
        <!-- Terminal del servidor -->
        <TextBox Name="TerminalOutput" Height="150" VerticalAlignment="Top" Margin="10" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True"/>
        
        <!-- Uso de CPU y RAM -->
        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Encender Server" DockPanel.Dock="Top" Width="150" Height="40" Click="StartMinecraftServer" HorizontalAlignment="Center" Margin="10"/>
            <TextBlock Name="CpuUsageText" Text="CPU Usage: --" Margin="5"/>
            <TextBlock Name="RamUsageText" Text="RAM Usage: --" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
