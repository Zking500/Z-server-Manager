<Window x:Class="Z_Server_Manager.ListaServers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server List" Height="500" Width="400">
    <Grid>
        <DockPanel>
            <Button Content="Browse Servers" DockPanel.Dock="Top" Width="120" Height="40" Click="BrowseServersButton_Click" HorizontalAlignment="Center" Margin="10"/>

            <ListView x:Name="ServerListView" Margin="10"
                      SelectionChanged="ServerListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <!-- Columna de imagen con encabezado "Logo" -->
                        <GridViewColumn Header="Logo" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Width="30" Height="30" Source="{Binding IconPath}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Columna del nombre del servidor -->
                        <GridViewColumn Header="Server Name" Width="250" DisplayMemberBinding="{Binding ServerName}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </Grid>
</Window>
