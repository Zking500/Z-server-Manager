<Window x:Class="Z_Server_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="600" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Server IP:" Margin="10"/>
            <TextBox x:Name="ServerIpTextBox" Width="200" Margin="10"/>

            <TextBlock Text="Port:" Margin="10"/>
            <TextBox x:Name="PortTextBox" Width="200" Margin="10" Text="22"/>
            <!-- Default SSH port 22 -->

            <TextBlock Text="Username:" Margin="10"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="10"/>

            <TextBlock Text="Password:" Margin="10"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="10"/>

            <CheckBox x:Name="RememberMeCheckBox" Content="Remember Me" Margin="10"/>

            <Button x:Name="LoginButton" Content="Login" Width="100" Click="LoginButton_Click" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
